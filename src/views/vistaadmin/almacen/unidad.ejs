                <script>
                    function botoneditar(idunidad) {
                        // Asignar el ID del perfil al campo oculto

                        axios.get(`/unidad/${idunidad}`)
                            .then(function (response) {
                                const respuestadelquery = response.data;
                                if (respuestadelquery) {
                                    console.log(respuestadelquery); // Imprimir los datos en la consola
                                    document.getElementById('idunidad1').value = respuestadelquery.idunidad;
                                    document.getElementById('nombre_unidadimput').value = respuestadelquery.nombre_unidad;
                                }
                            })
                            .catch(function (error) {
                                console.error(error);
                            });
                    }


                    function postDatos() {
                        // Obtener los valores de los campos de entrada
                        const nombre_unidad = document.getElementById('nombre_unidad').value;

                        // Crear un objeto de datos con los valores para usar en los controolers
                        const data = {
                            nombre_unidad: nombre_unidad,
                        };

                        // Enviar una solicitud POST a la ruta "clientes" utilizando Axios
                        axios.post('/unidad', data)
                            .then(function (response) {
                                // Mostrar un mensaje de √©xito con SweetAlert
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Registro exitoso',
                                    text: 'La Unidad se realiz√≥ correctamente.',
                                    timer: 2000, // Cambia la duraci√≥n del mensaje si lo deseas
                                    showConfirmButton: false // Oculta el bot√≥n "OK"
                                });

                                // Redirigir al usuario despu√©s de 2 segundos (2000 ms)
                                setTimeout(function () {
                                    window.location.href = '/admin/unidad';
                                }, 2000);
                            })

                    }


                    function guardarDatos() {
                        // Obt√©n el valor del campo de entrada
                        // Obtener los valores de los campos de entrada
                        const idunidad1 = document.getElementById('idunidad1').value;
                        const nombre_unidad1 = document.getElementById('nombre_unidadimput').value;

                        // Crear un objeto de datos con los valores para usar en los controolers
                        const data = {
                            nombre_unidad1: nombre_unidad1,
                        };


                        axios.put(`/unidad/${idunidad1}`, data)
                            .then(function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Registro exitoso',
                                    text: 'La Unidad se realiz√≥ correctamente.',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(function () {
                                    // Despu√©s de que el usuario haya visto la notificaci√≥n, actualiza la p√°gina
                                    location.reload(); // Esto recargar√° la p√°gina actual
                                });
                            })
                            .catch(function (error) {
                                console.error(error);
                            });

                    }


                    function botoneliminar(idunidad) {
                        // Utiliza SweetAlert2 para mostrar una ventana modal de confirmaci√≥n
                        Swal.fire({
                            title: '¬øEst√°s seguro?',
                            text: 'Esta acci√≥n eliminar√° la Unidad con ID ' + idunidad,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'S√≠, eliminar',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // El usuario confirm√≥ la eliminaci√≥n, realiza la solicitud DELETE con Axios
                                axios.delete(`/unidad/${idunidad}`)
                                    .then((response) => {
                                        // Si la solicitud DELETE se completa con √©xito, puedes manejar la respuesta aqu√≠
                                        console.log('Unidad eliminado con √©xito');
                                        // Puedes realizar acciones adicionales, como redirigir a otra p√°gina o actualizar la interfaz de usuario
                                        window.location.reload();
                                    })
                                    .catch((error) => {
                                        // Si hay un error en la solicitud DELETE, puedes manejarlo aqu√≠
                                        console.error('Error al eliminar Unidad:', error);
                                        // Puedes mostrar un mensaje de error o realizar otras acciones seg√∫n sea necesario
                                    });
                            }
                        });
                    }

                    function botonveract(idunidad) {
                        // Utiliza SweetAlert2 para mostrar una ventana modal de confirmaci√≥n
                        Swal.fire({
                            title: '¬øEst√°s seguro?',
                            text: 'Esta acci√≥n restablecera la Unidad con ID ' + idunidad,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'S√≠, restablecer',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
