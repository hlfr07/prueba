                    function botoneditar(idcliente) {
                        // Asignar el ID del perfil al campo oculto

                        axios.get(`/clientes/${idcliente}`)
                            .then(function (response) {
                                const respuestadelquery = response.data;
                                if (respuestadelquery) {
                                    console.log(respuestadelquery); // Imprimir los datos en la consola
                                    document.getElementById('idcliente').value = respuestadelquery.idcliente;
                                    document.getElementById('ruc1').value = respuestadelquery.ruc;
                                    document.getElementById('dni1').value = respuestadelquery.dni;
                                    document.getElementById('nombre1').value = respuestadelquery.nombre;
                                    document.getElementById('razonsocial1').value = respuestadelquery.razonsocial;
                                    document.getElementById('telefono1').value = respuestadelquery.telefono;
                                    document.getElementById('direccion1').value = respuestadelquery.direccion;
                                }
                            })
                            .catch(function (error) {
                                console.error(error);
                            });
                    }


                    function postDatos() {
                        // Obtener los valores de los campos de entrada
                        const ruc = document.getElementById('ruc').value;
                        const dni = document.getElementById('dni').value;
                        const nombre = document.getElementById('nombre').value;
                        const razonsocial = document.getElementById('razonsocial').value;
                        const telefono = document.getElementById('telefono').value;
                        const direccion = document.getElementById('direccion').value;

                        // Crear un objeto de datos con los valores para usar en los controolers
                        const data = {
                            ruc: ruc,
                            dni: dni,
                            nombre: nombre,
                            razonsocial: razonsocial,
                            telefono: telefono,
                            direccion: direccion
                        };
                        console.log(data);

                        // Enviar una solicitud POST a la ruta "clientes" utilizando Axios
                        axios.post('/clientes', data)
                            .then(function (response) {
                                // Mostrar un mensaje de éxito con SweetAlert
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Registro exitoso',
                                    text: 'El registro se realizó correctamente.',
                                    timer: 2000, // Cambia la duración del mensaje si lo deseas
                                    showConfirmButton: false // Oculta el botón "OK"
                                });

                                // Redirigir al usuario después de 2 segundos (2000 ms)
                                setTimeout(function () {
                                    window.location.href = '/clientes';
                                }, 2000);
                            })

                    }


